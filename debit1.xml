<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools">

    <EditText
        android:id="@+id/cno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="number" 
        android:hint="CARDNUMBER" tools:ignore="HardcodedText"/>

    <EditText
        android:id="@+id/exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cno"
        android:layout_below="@+id/cno"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="EXPIRY DATE"
        android:inputType="number"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/cvv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/exp"
        android:layout_below="@+id/exp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="CVV"
        android:inputType="numberPassword"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cvv"
        android:layout_below="@+id/cvv"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="43dp"
        android:text="ok"
        tools:ignore="HardcodedText" />

</RelativeLayout>
